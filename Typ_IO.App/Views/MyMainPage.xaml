<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ContentView="clr-namespace:BasisJaar2.Views"
             xmlns:vm="clr-namespace:BasisJaar2.ViewModels"
             x:Class="BasisJaar2.Views.MyMainPage"
             x:DataType="vm:MainPageViewModel"
             Title="">

    <ContentPage.ToolbarItems>
        <ToolbarItem 
            IconImageSource="{Binding ToolbarIcon}" 
            Text="{Binding ToolbarText}" 
            Command="{Binding ToolbarCommand}"
            Priority="0"
            Order="Primary" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*,Auto">
        <ContentView:Header Grid.Row="0" />
        <ContentView Grid.Row="1" Content="{Binding SubpageContent}" />
        <ContentView:Footer Grid.Row="2" />
    </Grid>
</ContentPage>
