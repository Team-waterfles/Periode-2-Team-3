<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BasisJaar2.ViewModels"
             x:Class="BasisJaar2.Views.PracticePage"
             x:DataType="vm:PracticePageViewModel">

	<ContentView.BindingContext>
		<vm:PracticePageViewModel />
	</ContentView.BindingContext>

	<!-- Hele content in het midden -->
	<VerticalStackLayout Padding="20"
                         Spacing="15"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         WidthRequest="450">

		<!-- Naam van het gekozen level -->
		<Label Text="{Binding LevelNaam}"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

		<!-- Oefentekst -->
		<Label Text="Oefentekst:"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

		<Frame Padding="10"
               BackgroundColor="#eeeeee"
               HorizontalOptions="Center">
			<Label Text="{Binding Oefentekst}"
                   LineBreakMode="WordWrap"
                   HorizontalTextAlignment="Center" />
		</Frame>

		<!-- Keyboard assist -->
		<Label Text="Welke toets nu:"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10,0,0" />

		<Label Text="{Binding HuidigeToets}"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

		<Label Text="{Binding HuidigeVinger}"
               FontSize="12"
               HorizontalOptions="Center" />

		<!-- Gebruiker typt hier -->
		<Label Text="Jouw tekst:"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="10,10,10,0" />

		<!-- Editor: tekst in het midden, kleiner, autosize, lock via KanTypen -->
		<Editor x:Name="UserEditor"
                Text="{Binding UserText}"
                WidthRequest="400"
                FontSize="12"
                HorizontalTextAlignment="Center"
                AutoSize="TextChanges"
                IsEnabled="{Binding KanTypen}"
                TextChanged="OnUserTextChanged" />

		<!-- Live feedback -->
		<Label Text="Feedback:"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10,0,0" />

		<Label x:Name="LiveFeedbackLabel"
               LineBreakMode="WordWrap"
               WidthRequest="400"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

		<!-- Start / Klaar knoppen -->
		<HorizontalStackLayout Spacing="10"
                               Margin="0,20,0,0"
                               HorizontalOptions="Center">
			<Button Text="Start"
                    Command="{Binding StartCommand}"
                    IsEnabled="{Binding KanStarten}" />

			<Button Text="Klaar"
                    Command="{Binding KlaarCommand}"
                    IsEnabled="{Binding KanKlaar}" />
		</HorizontalStackLayout>

		<!-- Resultaten (tijd / WPM / fouten) -->
		<VerticalStackLayout Spacing="5"
                             Margin="0,15,0,0"
                             HorizontalOptions="Center">
			<Label Text="{Binding TijdTekst}"
                   HorizontalOptions="Center" />

			<Label Text="{Binding WpmTekst}"
                   HorizontalOptions="Center" />

			<Label Text="{Binding ResultaatTekst}"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="Red" />
		</VerticalStackLayout>

	</VerticalStackLayout>
</ContentView>
