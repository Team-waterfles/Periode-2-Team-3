<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BasisJaar2.ViewModels"
             x:Class="BasisJaar2.Views.PracticePage"
             x:DataType="vm:PracticePageViewModel">

    <ContentView.BindingContext>
        <vm:PracticePageViewModel />
    </ContentView.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Naam van het gekozen level -->
        <Label Text="{Binding LevelNaam}"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Oefentekst -->
        <Label Text="Oefentekst:"
               FontAttributes="Bold" />

        <Frame Padding="10" BackgroundColor="#eeeeee">
            <Label Text="{Binding Oefentekst}"
                   LineBreakMode="WordWrap" />
        </Frame>

        <!-- Gebruiker typt hier -->
        <Label Text="Jouw tekst:"
               FontAttributes="Bold" />

        <Editor Text="{Binding UserText}"
                HeightRequest="150" />

        <!-- Start / Klaar knoppen -->
        <HorizontalStackLayout Spacing="10" Margin="0,20,0,0">
            <Button Text="Start"
                    Command="{Binding StartCommand}" />

            <Button Text="Klaar"
                    Command="{Binding KlaarCommand}" />
        </HorizontalStackLayout>

        <!-- Resultaat foutendetectie -->
        <Label Text="{Binding ResultaatTekst}"
               Margin="0,10,0,0"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Red" />

    </VerticalStackLayout>
</ContentView>
