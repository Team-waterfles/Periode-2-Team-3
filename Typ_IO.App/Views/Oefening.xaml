<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasisJaar2.Views.Oefening">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Titel -->
            <Label Text="Typ Oefening"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Timer + Karakters -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">

                <Label Text=" Tijd:"
                       FontSize="18"
                       FontAttributes="Bold" />

                <Label Text="{Binding Tijd}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Green" />

                <Label Text="Getypt:"
                       FontSize="18"
                       FontAttributes="Bold" />

                <Label Text="{Binding AantalKarakters}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Blue" />

            </HorizontalStackLayout>

            <!-- Voorbeeldtekst -->
            <Frame BorderColor="Black"
                   CornerRadius="10"
                   Padding="15"
                   BackgroundColor="Black">

                <VerticalStackLayout>

                    <Label Text="Typ de onderstaande tekst over:"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,0,0,10"
                           TextColor="White" />

                    <Label Text="{Binding VoorbeeldTekst}"
                           FontSize="18"
                           FontFamily="CourierNew"
                           TextColor="White"
                           LineBreakMode="WordWrap" />

                </VerticalStackLayout>

            </Frame>

            <!-- Invoerveld -->
            <Frame BorderColor="DarkGray"
                   CornerRadius="10"
                   Padding="5"
                   BackgroundColor="White">

                <Editor Text="{Binding Invoer}"
                        Placeholder="Begin hier te typen..."
                        FontSize="18"
                        FontFamily="CourierNew"
                        HeightRequest="200"
                        IsEnabled="{Binding InvoerEnabled}" />

            </Frame>

            <!-- Knoppen -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">

                <Button Text="▶ Start"
                        Command="{Binding StartCommand}"
                        BackgroundColor="Green"
                        TextColor="White"
                        FontSize="18"
                        WidthRequest="120"
                        HeightRequest="50"
                        IsEnabled="{Binding StartEnabled}" />

                <Button Text="⏹ Stop"
                        Command="{Binding StopCommand}"
                        BackgroundColor="Red"
                        TextColor="White"
                        FontSize="18"
                        WidthRequest="120"
                        HeightRequest="50"
                        IsEnabled="{Binding StopEnabled}" />

            </HorizontalStackLayout>

            <!-- Resultaat -->
            <Frame IsVisible="{Binding ResultaatVisible}"
                   BorderColor="Green"
                   CornerRadius="10"
                   Padding="20"
                   BackgroundColor="LightGreen">

                <VerticalStackLayout Spacing="10">

                    <Label Text="Oefening Voltooid!"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />

                    <Label Text="{Binding ResultaatTekst}"
                           FontSize="16"
                           HorizontalOptions="Center" />

                    <Button Text="Opnieuw"
                            Command="{Binding OpnieuwCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"
                            HorizontalOptions="Center"
                            Margin="0,10,0,0" />
                    
                    <Button Text="Terug"
                            Command="{Binding TerugCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"
                            HorizontalOptions="Center"
                            Margin="0,10,0,0" />

                </VerticalStackLayout>

            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentView>
