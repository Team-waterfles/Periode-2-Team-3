<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasisJaar2.Views.Oefening">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Tap anywhere -> focus input -->
            <VerticalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="FocusHiddenEditor_Tapped" />
            </VerticalStackLayout.GestureRecognizers>

            <!-- Titel -->
            <Label Text="Typ Oefening"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Timer + Karakters -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                <Label Text="Tijd:" FontSize="18" FontAttributes="Bold" />
                <Label Text="{Binding Tijd}" FontSize="24" FontAttributes="Bold" TextColor="Green" />
                <Label Text="Getypt:" FontSize="18" FontAttributes="Bold" />
                <Label Text="{Binding AantalKarakters}" FontSize="24" FontAttributes="Bold" TextColor="Blue" />
            </HorizontalStackLayout>

            <!-- Voorbeeldtekst -->
            <Frame BorderColor="Black"
                   CornerRadius="10"
                   Padding="12"
                   BackgroundColor="White"
                   HorizontalOptions="Center"
                   WidthRequest="500"
                   HeightRequest="80">
                <Label FormattedText="{Binding FormattedVoorbeeldTekst}"
                       FontSize="18"
                       FontFamily="CourierNew"
                       LineBreakMode="WordWrap"
                       HorizontalOptions="Start"
                       VerticalOptions="Center" />
            </Frame>

            <!-- ✅ Onzichtbare input (verplicht om te typen) -->
            <Editor x:Name="HiddenEditor"
                    TextChanged="HiddenEditor_TextChanged"
                    Opacity="0"
                    HeightRequest="1"
                    WidthRequest="1"
                    AutoSize="TextChanges" />

            <!-- Hint -->
            <Frame BackgroundColor="LightYellow"
                   Padding="10"
                   CornerRadius="8"
                   BorderColor="Orange"
                   HorizontalOptions="Center"
                   WidthRequest="500">
                <Label Text="{Binding HuidigeHint}"
                       FontSize="16"
                       TextColor="DarkOrange"
                       HorizontalOptions="Center" />
            </Frame>

            <!-- Invoer -->
            <Frame BackgroundColor="White"
                   Padding="10"
                   CornerRadius="8"
                   BorderColor="Gray"
                   HorizontalOptions="Center"
                   WidthRequest="500"
                   HeightRequest="80">
                <Label FormattedText="{Binding FormattedInvoer}"
                       FontFamily="CourierNew"
                       FontSize="18"
                       HorizontalOptions="Start"
                       VerticalOptions="Center" />
            </Frame>

            <!-- Afbeelding -->
            <Image Source="{Binding CurrentLetterImage}"
                   IsVisible="{Binding HasCurrentLetterImage}"
                   HeightRequest="160"
                   HorizontalOptions="Center"
                   Margin="0,6,0,0"
                   Aspect="AspectFit" />

            <!-- Knoppen -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="▶ Start"
                        Clicked="Start_Clicked"
                        BackgroundColor="Green"
                        TextColor="White"
                        WidthRequest="120"
                        HeightRequest="50" />
                <Button Text="⏹ Stop"
                        Clicked="Stop_Clicked"
                        BackgroundColor="Red"
                        TextColor="White"
                        WidthRequest="120"
                        HeightRequest="50" />
            </HorizontalStackLayout>

            <!-- Resultaat -->
            <Frame IsVisible="{Binding ResultaatVisible}"
                   BorderColor="Green"
                   CornerRadius="10"
                   Padding="20"
                   BackgroundColor="LightGreen"
                   HorizontalOptions="Center"
                   WidthRequest="500">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Oefening voltooid!"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding ResultaatTekst}"
                           FontSize="16"
                           HorizontalOptions="Center" />
                    <Button Text="Opnieuw"
                            Clicked="Opnieuw_Clicked"
                            BackgroundColor="Orange"
                            TextColor="White" />
                    <Button Text="Terug"
                            Clicked="Terug_Clicked"
                            BackgroundColor="Orange"
                            TextColor="White" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>
