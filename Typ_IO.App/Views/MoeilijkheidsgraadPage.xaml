<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BasisJaar2.ViewModels"
             x:Class="BasisJaar2.Views.MoeilijkheidsgraadPage"
             x:DataType="vm:MoeilijkheidsgraadViewModel">

    <VerticalStackLayout 
        Padding="20"
        Spacing="30"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <!-- Titel -->
        <Label 
            Text="Kies een moeilijkheidsgraad"
            FontSize="32"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="Black" />

        <!-- Knoppen container -->
        <HorizontalStackLayout 
            Spacing="15"
            HorizontalOptions="Center">

            <!-- Makkelijk knop -->
            <Border 
                StrokeThickness="2"
                Stroke="Black"
                Background="White"
                StrokeShape="RoundRectangle 5"
                WidthRequest="180"
                HeightRequest="80">
                <Label 
                    Text="Makkelijk" 
                    FontSize="20" 
                    TextColor="Black"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding MakkelijkCommand}" />
                </Border.GestureRecognizers>
            </Border>

            <!-- Normaal knop -->
            <Border 
                StrokeThickness="2"
                Stroke="Black"
                Background="White"
                StrokeShape="RoundRectangle 5"
                WidthRequest="180"
                HeightRequest="80">
                <Label 
                    Text="Normaal" 
                    FontSize="20" 
                    TextColor="Black"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NormaalCommand}" />
                </Border.GestureRecognizers>
            </Border>

            <!-- Moeilijk knop -->
            <Border 
                StrokeThickness="2"
                Stroke="Black"
                Background="White"
                StrokeShape="RoundRectangle 5"
                WidthRequest="180"
                HeightRequest="80">
                <Label 
                    Text="Moeilijk" 
                    FontSize="20" 
                    TextColor="Black"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding MoeilijkCommand}" />
                </Border.GestureRecognizers>
            </Border>

        </HorizontalStackLayout>

        <!-- Exit knop -->
        <Border 
            StrokeThickness="2"
            Stroke="Black"
            Background="White"
            StrokeShape="RoundRectangle 5"
            WidthRequest="150"
            HeightRequest="50"
            Margin="0,20,0,0">
            <Label 
                Text="âœ• Exit" 
                FontSize="18" 
                TextColor="Black"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ExitCommand}" />
            </Border.GestureRecognizers>
        </Border>

    </VerticalStackLayout>
</ContentView>