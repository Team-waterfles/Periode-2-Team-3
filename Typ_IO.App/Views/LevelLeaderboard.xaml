<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BasisJaar2.ViewModels"
             xmlns:models="clr-namespace:Typ_IO.Core.Models;assembly=Typ_IO.Core"
             x:Class="BasisJaar2.Views.LevelLeaderboard"
             x:DataType="vm:LevelLeaderboardViewModel">
    <ScrollView>
        <VerticalStackLayout>
            <!-- Titel -->
            <Label Text="Leaderboard"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <CollectionView ItemsSource="{Binding Levelscores}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:LevelScore">
                        <Frame Padding="15"
                       Margin="0,10"
                       CornerRadius="15"
                       BackgroundColor="#F2F2F2"
                       HasShadow="True">

                            <Grid ColumnDefinitions="Auto,*,Auto">

                                <!-- Positie -->
                                <Label Text="{Binding TopScore}"
                   FontSize="20"
                   Grid.Column="0"/>

                                <!-- Naam -->
                                <Label Text="{Binding Naam}"
                   FontSize="20"
                   HorizontalTextAlignment="Center"
                   Grid.Column="1"/>

                                <!-- Score -->
                                <Label Text="{Binding Positie}"
                   FontSize="20"
                   HorizontalTextAlignment="End"
                   Grid.Column="2"/>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
