<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BasisJaar2.ViewModels"
             xmlns:models="clr-namespace:Typ_IO.Core.Models;assembly=Typ_IO.Core"
             x:Class="BasisJaar2.Views.LevelLeaderboard"
             x:DataType="vm:LevelLeaderboardViewModel">

    <VerticalStackLayout>
        <!-- Titel -->
        <Label Text="Leaderboard"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        <CollectionView ItemsSource="{Binding Levelscores}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:LevelScore">
                    <Frame Padding="15"
                           Margin="0,10"
                           CornerRadius="15"
                           BackgroundColor="#F2F2F2"
                           HasShadow="True">
                        <HorizontalStackLayout Spacing="100">
                            <Label Text="{Binding TopScore}"
                                   FontSize="20"/>
                            <Label Text="{Binding Naam}"
                                   FontSize="20"/>
                            <Label Text="{Binding Positie}"
                                   FontSize="20"/>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
