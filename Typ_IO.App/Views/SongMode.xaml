<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="BasisJaar2.Views.SongMode"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:BasisJaar2.ViewModels"
    x:DataType="vm:SongModeViewModel"
    x:Name="ThisPage">

    <Grid Padding="20" RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,*" ColumnSpacing="20" RowSpacing="20">

        <!-- Titel -->
        <Label 
            Grid.Row="0" 
            Grid.ColumnSpan="2"
            Text="Typ.IO - Song mode"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            Margin="0,0,0,10" />

        <!-- Linker kolom: Song lijst -->
        <Border 
            Grid.Row="1" 
            Grid.Column="0"
            Stroke="Gray"
            StrokeThickness="1"
            Background="White"
            Padding="15">

            <VerticalStackLayout Spacing="10">
                <Label 
                    Text="Kies lied om te spelen"
                    FontSize="18"
                    FontAttributes="Bold"
                    Margin="0,0,0,15" />

                <ScrollView>
                    <VerticalStackLayout Spacing="10">

                        <!-- Enemy -->
                        <Border 
                            Stroke="LightGray"
                            StrokeThickness="1"
                            Background="#F8F8F8"
                            Padding="12">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSongTapped" CommandParameter="Enemy" />
                            </Border.GestureRecognizers>

                            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
                                <Label Grid.Column="0" Text="♪" FontSize="28" VerticalOptions="Center" />

                                <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                    <Label Text="Enemy" FontSize="16" FontAttributes="Bold" TextColor="Black" />
                                    <Label Text="Imagine Dragons" FontSize="13" TextColor="Gray" />
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="★★★☆☆" FontSize="11" TextColor="Orange" />
                                        <Label Text="Medium" FontSize="11" TextColor="Gray" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <Label Grid.Column="2" Text="E: 125" FontSize="12" TextColor="Gray" VerticalOptions="Center" />

                                <Border Grid.Column="3" 
                                        WidthRequest="35" HeightRequest="35"
                                        Background="LightBlue"
                                        StrokeThickness="0"
                                        VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="17.5" />
                                    </Border.StrokeShape>
                                    <Label Text="M" FontSize="14" FontAttributes="Bold" 
                                           HorizontalOptions="Center" VerticalOptions="Center" />
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Believer -->
                        <Border 
                            Stroke="LightGray"
                            StrokeThickness="1"
                            Background="#F8F8F8"
                            Padding="12">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSongTapped" CommandParameter="Believer" />
                            </Border.GestureRecognizers>

                            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
                                <Label Grid.Column="0" Text="♪" FontSize="28" VerticalOptions="Center" />

                                <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                    <Label Text="Believer" FontSize="16" FontAttributes="Bold" TextColor="Black" />
                                    <Label Text="Imagine Dragons" FontSize="13" TextColor="Gray" />
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="★★★☆☆" FontSize="11" TextColor="Orange" />
                                        <Label Text="Medium" FontSize="11" TextColor="Gray" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <Label Grid.Column="2" Text="E: 125" FontSize="12" TextColor="Gray" VerticalOptions="Center" />

                                <Border Grid.Column="3" 
                                        WidthRequest="35" HeightRequest="35"
                                        Background="LightBlue"
                                        StrokeThickness="0"
                                        VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="17.5" />
                                    </Border.StrokeShape>
                                    <Label Text="M" FontSize="14" FontAttributes="Bold" 
                                           HorizontalOptions="Center" VerticalOptions="Center" />
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Faded -->
                        <Border 
                            Stroke="LightGray"
                            StrokeThickness="1"
                            Background="#F8F8F8"
                            Padding="12">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSongTapped" CommandParameter="Faded" />
                            </Border.GestureRecognizers>

                            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
                                <Label Grid.Column="0" Text="♪" FontSize="28" VerticalOptions="Center" />

                                <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                    <Label Text="Faded" FontSize="16" FontAttributes="Bold" TextColor="Black" />
                                    <Label Text="Alan Walker" FontSize="13" TextColor="Gray" />
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="★★☆☆☆" FontSize="11" TextColor="Orange" />
                                        <Label Text="Easy" FontSize="11" TextColor="Gray" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <Label Grid.Column="2" Text="E: 90" FontSize="12" TextColor="Gray" VerticalOptions="Center" />

                                <Border Grid.Column="3" 
                                        WidthRequest="35" HeightRequest="35"
                                        Background="LightGreen"
                                        StrokeThickness="0"
                                        VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="17.5" />
                                    </Border.StrokeShape>
                                    <Label Text="E" FontSize="14" FontAttributes="Bold" 
                                           HorizontalOptions="Center" VerticalOptions="Center" />
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Bad Romance -->
                        <Border 
                            Stroke="LightGray"
                            StrokeThickness="1"
                            Background="#F8F8F8"
                            Padding="12">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSongTapped" CommandParameter="Bad Romance" />
                            </Border.GestureRecognizers>

                            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
                                <Label Grid.Column="0" Text="♪" FontSize="28" VerticalOptions="Center" />

                                <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                    <Label Text="Bad Romance" FontSize="16" FontAttributes="Bold" TextColor="Black" />
                                    <Label Text="Lady Gaga" FontSize="13" TextColor="Gray" />
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="★★★★☆" FontSize="11" TextColor="Orange" />
                                        <Label Text="Hard" FontSize="11" TextColor="Gray" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <Label Grid.Column="2" Text="H: 140" FontSize="12" TextColor="Gray" VerticalOptions="Center" />

                                <Border Grid.Column="3" 
                                        WidthRequest="35" HeightRequest="35"
                                        Background="LightCoral"
                                        StrokeThickness="0"
                                        VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="17.5" />
                                    </Border.StrokeShape>
                                    <Label Text="H" FontSize="14" FontAttributes="Bold" 
                                           HorizontalOptions="Center" VerticalOptions="Center" />
                                </Border>
                            </Grid>
                        </Border>

                    </VerticalStackLayout>
                </ScrollView>
            </VerticalStackLayout>
        </Border>

        <!-- Rechter kolom: Song details -->
        <Border 
            Grid.Row="1" 
            Grid.Column="1"
            Stroke="Gray"
            StrokeThickness="1"
            Background="White"
            Padding="20">

            <VerticalStackLayout 
                Spacing="15"
                VerticalOptions="Center"
                HorizontalOptions="Center">

                <!-- Groot muzieknoot icoon -->
                <Label 
                    Text="♪"
                    FontSize="100"
                    HorizontalOptions="Center"
                    TextColor="#061f4f" />

                <!-- Song titel -->
                <Label 
                    x:Name="TitelLabel"
                    FontSize="24"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    TextColor="Black" />

                <!-- Artiest -->
                <Label 
                    x:Name="ArtiestLabel"
                    FontSize="16"
                    TextColor="Gray"
                    HorizontalOptions="Center" />

                <!-- Moeilijkheid sterren -->
                <HorizontalStackLayout 
                    HorizontalOptions="Center"
                    Spacing="5">
                    <Label 
                        Text="★★★☆☆"
                        FontSize="18"
                        TextColor="Orange" />
                    <Label 
                        x:Name="MoeilijkheidLabel"
                        FontSize="14"
                        TextColor="Gray"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- BPM en Lengte -->
                <VerticalStackLayout Spacing="8" Margin="0,10,0,0">
                    <Label 
                        x:Name="BpmLabel"
                        FontSize="16"
                        HorizontalOptions="Center"
                        TextColor="Black" />

                    <Label 
                        x:Name="LengteLabel"
                        FontSize="16"
                        HorizontalOptions="Center"
                        TextColor="Black" />
                </VerticalStackLayout>

                <!-- Play knop -->
                <Button 
                    Text="▶ Play"
                    Clicked="OnPlayClicked"
                    BackgroundColor="#061f4f"
                    TextColor="White"
                    FontSize="18"
                    Padding="40,12"
                    Margin="0,20,0,0"
                    HorizontalOptions="Center" />

            </VerticalStackLayout>
        </Border>

        <!-- Terug knop -->
        <Button 
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Text="Terug"
            Command="{Binding TerugCommand}"
            BackgroundColor="#DD4444"
            TextColor="White"
            HorizontalOptions="Center"
            WidthRequest="150" />

    </Grid>
</ContentView>