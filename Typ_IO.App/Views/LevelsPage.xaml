<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BasisJaar2.ViewModels"
             xmlns:models="clr-namespace:Typ_IO.Core.Models;assembly=Typ_IO.Core"
             x:Class="BasisJaar2.Views.LevelsPage"
             x:DataType="vm:LevelsViewModel">

    <ContentView.BindingContext>
        <vm:LevelsViewModel />
    </ContentView.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Terugknop linksboven -->
        <Border StrokeThickness="0"
                Background="#061f4f"
                StrokeShape="RoundRectangle 10"
                WidthRequest="100"
                HeightRequest="40"
                HorizontalOptions="Start"
                Margin="0,0,0,5">
            <Label Text="Terug"
                   TextColor="White"
                   FontSize="16"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTerugClicked" />
            </Border.GestureRecognizers>
        </Border>

        <Label Text="Kies een level"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,10" />

        <CollectionView ItemsSource="{Binding Levels}"
                        Margin="0,10"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Oefenlevel">
                    <Frame Margin="0,8"
                           Padding="12"
                           HasShadow="True"
                           CornerRadius="15"
                           BackgroundColor="#1a3c8c">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Naam}"
                                   FontAttributes="Bold"
                                   FontSize="20"
                                   TextColor="White" />
                            <Label FontSize="13"
                                   TextColor="#dddddd">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="2 vingers">
                                        <Setter Property="Text" Value="Begin met de basis positie" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="4 vingers">
                                        <Setter Property="Text" Value="Voeg wijsvingers en middelvingers toe" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="6 vingers">
                                        <Setter Property="Text" Value="Nu ook de ringvingers" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="8 vingers">
                                        <Setter Property="Text" Value="Alle vingers behalve duimen" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="letters bovenste rij">
                                        <Setter Property="Text" Value="Oefen de bovenste rij toetsen" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="10 vingers">
                                        <Setter Property="Text" Value="Alle letters van het toetsenbord" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                            <Button Text="Start level"
                                    Margin="0,8,0,0"
                                    Padding="5"
                                    FontSize="14"
                                    TextColor="White"
                                    BackgroundColor="#0c2e6b"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:LevelsViewModel}}, Path=StartLevelCommand}"
                                    CommandParameter="{Binding .}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentView>