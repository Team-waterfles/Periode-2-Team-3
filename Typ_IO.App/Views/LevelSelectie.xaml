<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="BasisJaar2.Views.LevelSelectie"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Terugknop linksboven -->
        <Border StrokeThickness="0"
                Background="#061f4f"
                StrokeShape="RoundRectangle 10"
                WidthRequest="100"
                HeightRequest="40"
                HorizontalOptions="Start"
                Margin="0,0,0,10">
            <Label Text="Terug"
                   TextColor="White"
                   FontSize="16"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTerugClicked" />
            </Border.GestureRecognizers>
        </Border>

        <!-- Titel -->
        <Label Text="Kies een level"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Levels -->
        <CollectionView ItemsSource="{Binding Levels}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15"
                           Margin="0,10"
                           CornerRadius="15"
                           BackgroundColor="#F2F2F2"
                           HasShadow="True">

                        <VerticalStackLayout Spacing="5">

                            <Label Text="{Binding Naam}"
                                   FontSize="20"
                                   FontAttributes="Bold" />

                            <Label FontSize="13"
                                   TextColor="Gray">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="Testlevel1">
                                        <Setter Property="Text" Value="Een korte tekst om mee te beginnen" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="Testlevel2">
                                        <Setter Property="Text" Value="Test je basis typsnelheid" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="Testlevel3">
                                        <Setter Property="Text" Value="Voor als je wat verder bent" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="Woorden">
                                        <Setter Property="Text" Value="Oefen met losse woorden" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="Complexere combinaties">
                                        <Setter Property="Text" Value="Korte zinnen en interpunctie" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Naam}" Value="Volledige zinnen">
                                        <Setter Property="Text" Value="Lange teksten voor gevorderden" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <Button Text="Start"
                                    Command="{Binding BindingContext.StartLevelCommand, Source={x:Reference Root}}"
                                    CommandParameter="{Binding}" />

                        </VerticalStackLayout>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentView>